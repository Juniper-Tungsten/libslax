version 1.1;

ns db extension = "http://xml.libslax.org/db";

var $options = {
    <engine> "sqlite";
    <database> "test.db";
}

var $query = {
    <collection> "devices";
    <project> {
        <id>;
    }
}

match / {
    var $handle = db:open($options);
    var $data = db:findAndFetch($handle, $query);
    copy-of $data;
    var $close = db:close($handle);
}
