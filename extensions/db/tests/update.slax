    <instance> {
        <name> "LOLMAX";
    }
    <conditions> {
        <condition> {
            <selector> "name";
            <operator> "like";
            <value> "name1";
        }
        <condition> {
            <selector> "id";
            <operator> ">";
            <value> "4";
            <or> "";
        }
    }
}

var $data2 = {
    <collection> "devices";
    <instance> {
        <id> "5";
        <name> "sample";
    }
}

match / {
