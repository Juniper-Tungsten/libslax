version 1.0;

<xsl:output method="html" encoding="utf-8">;

match / {
    <html> {
        <table border="1"> {
            <tr> {
                <td colspan="2"> "Total Sales";
            }
            
            for-each (salesdata/year) {
                <tr> {
                    <td> year;
                    <td align="right"> sum(region/sales);
                }
            }
            <tr> {
                <td> "Grand Total";
                <td align="right"> sum(salesdata/year/region/sales);
            }
        }
    }
}
