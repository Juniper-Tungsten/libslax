version 1.2;

ns "http://me.envelope";

output-method xml {
    indent "yes";
}

match report {
    <Message> {
        <Header> {
            <Title> title;
            <From> origin;
        }
        <Body> {
            ns "http://me.content";
            
            for-each (form) {
                <Item> {
                    <Ref> code;
                    element "Info" {
                        attribute "desc" {
                            expr description;
                        }
                        <Note> description/@note;
                    }
                    <Quantity> qty;
                }
            }
        }
    }
}
