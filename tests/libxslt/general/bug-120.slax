/* Machine Crafted with Care (tm) by slaxWriter */
version 1.1;

output-method {
    indent "yes";
}

match a {
    <a> {
        expr "\n   Ascending numeric\n   ";
        
        for-each (b) {
            sort . {
                data-type "number";
            }
            copy-of .;
        }
        expr "\n   Descending numeric\n   ";
        
        for-each (b) {
            sort . {
                data-type "number";
                order "descending";
            }
            copy-of .;
        }
        expr "\n   Ascending alpha\n   ";
        
        for-each (b) {
            sort . {
                data-type "text";
            }
            copy-of .;
        }
    }
}
