version 1.1;

ns fo = "http://www.w3.org/1999/XSL/Format";

match chapter/heading {
    <fo:block quadding="start" xsl:use-attribute-sets="title-style"> {
        apply-templates;
    }
}

attribute-set title-style {
    attribute "font-size" {
        expr "12pt";
    }
    attribute "font-weight" {
        expr "bold";
    }
}
